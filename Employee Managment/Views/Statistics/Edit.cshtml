@model Employee_Managment.Models.Statistics

@{
    ViewData["Title"] = "Edit Statistics";
}

<h2>Edit Statistics</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Salary" class="control-label"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QA" class="control-label"></label>
        <input asp-for="QA" class="form-control" />
        <span asp-validation-for="QA" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bonus" class="control-label"></label>
        <input asp-for="Bonus" class="form-control" />
        <span asp-validation-for="Bonus" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkedHours" class="control-label"></label>
        <input asp-for="WorkedHours" class="form-control" />
        <span asp-validation-for="WorkedHours" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VacationDays" class="control-label"></label>
        <input asp-for="VacationDays" class="form-control" />
        <span asp-validation-for="VacationDays" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SickDays" class="control-label"></label>
        <input asp-for="SickDays" class="form-control" />
        <span asp-validation-for="SickDays" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" asp-controller="Employees">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
