@if (User == null || User.Identity == null || User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline text-light" asp-controller="access" asp-action="logout">
        Welcome, @User?.Identity?.Name!
        <button type="submit" class="ml-2 btn btn-link navbar-brand text-light">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link" asp-controller="access" asp-action="login">Login</a>
}
