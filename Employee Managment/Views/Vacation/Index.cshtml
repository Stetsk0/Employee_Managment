@model IEnumerable<Employee_Managment.Models.Vacation>
@{
    ViewBag.Title = "Vacations";
    var employee = ViewBag.Employee as Employee_Managment.Models.Employee;
}

<h2>@employee.Name's Vacations</h2>
<a asp-action="Create" asp-route-employeeId="@employee.Id" class="btn btn-primary">Add Vacation</a>

<table class="table">
    <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vacation in Model)
        {
            <tr>
                <td>@vacation.StartDate.ToShortDateString()</td>
                <td>@vacation.EndDate.ToShortDateString()</td>
                <td>@vacation.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@vacation.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@vacation.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
