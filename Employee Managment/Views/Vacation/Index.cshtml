 @model IEnumerable<Employee_Managment.Models.Vacation>

@{
    ViewData["Title"] = "Vacations";
}

<h2>Vacations</h2>

<p>
    <a asp-action="Add">Add New Vacation</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Vacation Days</th>
            <th>Vacation Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vacation in Model)
        {
            <tr>
                <td>@vacation.Id</td>
                <td>@vacation.VacationDays</td>
                <td>@vacation.VacationType</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@vacation.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@vacation.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
