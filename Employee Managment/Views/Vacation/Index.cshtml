@model IEnumerable<Employee_Managment.Models.Vacation>
@{
    ViewData["Title"] = "Vacation List";
}

<h2>@ViewData["Title"] for Employee @ViewBag.EmployeeId</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Vacation Days</th>
            <th>Vacation Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vacation in Model)
        {
            <tr>
                <td>@vacation.Id</td>
                <td>@vacation.VacationDays</td>
                <td>@vacation.VacationType</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = vacation.Id })">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Add", new { employeeId = ViewBag.EmployeeId })" class="btn btn-primary">Add Vacation</a>
