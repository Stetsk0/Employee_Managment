@model Employee_Managment.Models.Vacation

@{
    ViewData["Title"] = "Add Vacation";
}

<h2>Add Vacation</h2>

<form asp-action="Add">
    <div class="form-group">
        <label asp-for="VacationDays" class="control-label"></label>
        <input asp-for="VacationDays" class="form-control" />
        <span asp-validation-for="VacationDays" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VacationType" class="control-label"></label>
        <select asp-for="VacationType" class="form-control">
            <option value="">-- Select Vacation Type --</option>
            @foreach (var value in Enum.GetValues(typeof(Employee_Managment.Models.VacationType)))
            {
                <option value="@value">@value</option>
            }
        </select>
        <span asp-validation-for="VacationType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>
