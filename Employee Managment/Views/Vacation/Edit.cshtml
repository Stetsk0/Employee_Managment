@model Employee_Managment.Models.Vacation

<h1>@ViewBag.Action Vacation</h1>

<form asp-action="@ViewBag.Action">
    <div class="form-group">
        <label asp-for="VacationDays" class="control-label"></label>
        <input asp-for="VacationDays" class="form-control" />
        <span asp-validation-for="VacationDays" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VacationType" class="control-label"></label>
        <select asp-for="VacationType" class="form-control" asp-items="Html.GetEnumSelectList<VacationType>()"></select>
        <span asp-validation-for="VacationType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
