@model Employee_Managment.Models.Vacation
@{
    ViewBag.Title = "Редагувати відпуску";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post" autocomplete="off">
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="EmployeeId" />
    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-action="Index" asp-route-employeeId="@Model.EmployeeId" class="btn btn-secondary">Назад</a>
</form>