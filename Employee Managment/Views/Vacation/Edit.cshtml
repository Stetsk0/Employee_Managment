@model Employee_Managment.Models.Vacation

@{
    ViewData["Title"] = "Edit Vacation";
}

<h2>@ViewData["Title"] for Employee @ViewBag.EmployeeName</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="EmployeeId" />
    <div class="form-group">
        <label asp-for="VacationDays"></label>
        <input asp-for="VacationDays" class="form-control" />
        <span asp-validation-for="VacationDays" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VacationType"></label>
        <select asp-for="VacationType" class="form-control">
            @foreach (var type in Enum.GetValues(typeof(Employee_Managment.Models.VacationType)))
            {
                <option value="@type">@type</option>
            }
        </select>
        <span asp-validation-for="VacationType" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="@Url.Action("Index", new { employeeId = Model.EmployeeId })">Back to List</a>
