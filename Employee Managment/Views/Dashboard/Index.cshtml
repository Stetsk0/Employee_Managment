@model Employee_Managment.Models.EmployeeStatisticsViewModel
@{
    ViewBag.Title = "Dashboard";
    var employeeStats = Model.EmployeeStatistics;
    var averageStats = Model.AverageStatistics;
}

<div class="container">
    <h1>Статистика</h1>

    <div class="row">
        <div class="col-md-6">
            <h2>Загальна інформація</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Параметр</th>
                        <th>Працівник</th>
                        <th>Середнє значення</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Зарплата</td>
                        <td>@employeeStats.Salary</td>
                        <td>@averageStats.Salary</td>
                    </tr>
                    <tr>
                        <td>QA</td>
                        <td>@employeeStats.QA</td>
                        <td>@averageStats.QA</td>
                    </tr>
                    <tr>
                        <td>Бонуси</td>
                        <td>@employeeStats.Bonus</td>
                        <td>@averageStats.Bonus</td>
                    </tr>
                    <tr>
                        <td>Кількість відпрацьованих годин</td>
                        <td>@employeeStats.HoursWorked</td>
                        <td>@averageStats.HoursWorked</td>
                    </tr>
                    <tr>
                        <td>Кількість понаднормових годин</td>
                        <td>@employeeStats.OvertimeHours</td>
                        <td>@averageStats.OvertimeHours</td>
                    </tr>
                    <tr>
                        <td>Кількість виконаних завдань</td>
                        <td colspan="2">
                            <div class="progress">
                                <div class="progress-bar bg-success" role="progressbar" style="width: @employeeStats.CompletedTasks%" aria-valuenow="@employeeStats.CompletedTasks" aria-valuemin="0" aria-valuemax="100">
                                    @employeeStats.CompletedTasks%
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>Середній час виконання завдання</td>
                        <td>@employeeStats.AverageTaskCompletionTime</td>
                        <td>@averageStats.AverageTaskCompletionTime</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-md-6">
            <h2>Графіки</h2>
            <div class="row">
                <div class="col-md-6">
                    <canvas id="data" width="400" height="400"></canvas>
                </div>
            </div>
            <h3>Зарплата</h3>
            <canvas id="chartSalary" width="200" height="100"></canvas>

            <h3>QA</h3>
            <canvas id="chartQA" width="200" height="100"></canvas>

            <h3>Бонуси</h3>
            <canvas id="chartBonus" width="200" height="100"></canvas>

            <h3>Години та понаднормові години</h3>
            <canvas id="chartHours" width="400" height="200"></canvas>

            <h3>Завдання</h3>
            <canvas id="chartTasks" width="400" height="200"></canvas>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var chartSalaryData = {
            labels: ["Зарплата"],
            datasets: [{
                label: 'Працівник',
                data: [@employeeStats.Salary],
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            },
            {
                label: 'Середнє значення',
                data: [@averageStats.Salary],
                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 1
            }]
        };
        var data = {
            labels: [
                'Red',
                'Blue',
                'Yellow'
            ],
            datasets: [{
                label: 'My First Dataset',
                data: [300, 50, 100],
                backgroundColor: [
                    'rgb(255, 99, 132)',
                    'rgb(54, 162, 235)',
                    'rgb(255, 205, 86)'
                ],
                // hoverOffset: 4
            }]
        };
        var chartQAData = {
            labels: ["QA"],
            datasets: [{
                label: 'Працівник',
                data: [@employeeStats.QA],
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            },
            {
                label: 'Середнє значення',
                data: [@averageStats.QA],
                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 1
            }]
        };

        var chartBonusData = {
            labels: ["Бонуси"],
            datasets: [{
                label: 'Працівник',
                data: [@employeeStats.Bonus],
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            },
            {
                label: 'Середнє значення',
                data: [@averageStats.Bonus],
                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 1
            }]
        };

        var chartHoursData = {
            labels: ["Години", "Понаднормові години"],
            datasets: [{
                label: 'Працівник',
                data: [
    @employeeStats.HoursWorked,
    @employeeStats.OvertimeHours
                    ],
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            },
            {
                label: 'Середнє значення',
                data: [
    @averageStats.HoursWorked,
    @averageStats.OvertimeHours
                    ],
                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 1
            }]
        };

        var chartTasksData = {
            labels: ["Виконані завдання", "Середній час виконання"],
            datasets: [{
                label: 'Працівник',
                data: [
    @employeeStats.CompletedTasks,
    @employeeStats.AverageTaskCompletionTime
                    ],
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            },
            {
                label: 'Середнє значення',
                data: [
    @averageStats.CompletedTasks,
    @averageStats.AverageTaskCompletionTime
                    ],
                backgroundColor: 'rgba(153, 102, 255, 0.2)',
                borderColor: 'rgba(153, 102, 255, 1)',
                borderWidth: 1
            }]
        };

        new Chart(document.getElementById('data'), {
            type: 'doughnut',
            data: data,
            options: {
                responsive: true,
                legend: {
                    position: 'right',
                },
                title: {
                    display: true,
                    text: 'Зарплата по відділам'
                },
                animation: {
                    animateScale: true,
                    animateRotate: true
                }
            }
        });

        new Chart(document.getElementById('chartSalary'), {
            type: 'bar',
            data: chartSalaryData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        new Chart(document.getElementById('chartQA'), {
            type: 'bar',
            data: chartQAData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        new Chart(document.getElementById('chartBonus'), {
            type: 'bar',
            data: chartBonusData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        new Chart(document.getElementById('chartHours'), {
            type: 'bar',
            data: chartHoursData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        new Chart(document.getElementById('chartTasks'), {
            type: 'bar',
            data: chartTasksData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>
