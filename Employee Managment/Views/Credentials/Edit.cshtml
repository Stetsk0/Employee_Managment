@model Employee_Managment.Models.Credentials

@{
    ViewData["Title"] = "Edit Credentials";
}

<h2>Edit Credentials</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label for="UserName" class="control-label">User Name</label>
        <input type="text" id="UserName" name="UserName" class="form-control" value="@Model.UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Password" class="control-label">Password</label>
        <input type="password" id="Password" name="Password" class="form-control" value="@Model.Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" asp-controller="Employees">Back to Employee List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
