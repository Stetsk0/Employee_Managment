@model Employee_Managment.Models.Credentials

@{
    ViewData["Title"] = "Редагувати облікові дані";
}

<h2>Редагувати облікові дані</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label>
        <input type="text" id="UserName" name="UserName" class="form-control" value="@Model.UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input type="password" id="Password" name="Password" class="form-control" value="@Model.Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Employees">Назад</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
